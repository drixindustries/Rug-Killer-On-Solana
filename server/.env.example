# Rug Killer Server Environment Variables
# Copy this file to .env and fill in real values.

# PostgreSQL connection (local or hosted)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://postgres:password@localhost:5432/rugkiller

# Session secret for express-session
SESSION_SECRET=change_me

# RPC Provider URLs and API Keys
# Preferred: set a full Ankr URL OR only the API key
# If only the key is set, the server builds https://rpc.ankr.com/solana/<KEY>
ANKR_RPC_URL=
ANKR_API_KEY=
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ALCHEMY_KEY=
ANKR_KEY=
GROVE_KEY=
SHYFT_KEY=

# External API Keys
BIRDEYE_API_KEY=
BUBBLEMAPS_API_KEY=
RUGCHECK_API_KEY=

# Bot / integration tokens (leave blank if unused)
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_URL=
TELEGRAM_BOT_USERNAME=
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_INVITE_URL=
DISCORD_ENABLED=false
TELEGRAM_ENABLED=false

# Alpha Alerts Configuration
ALPHA_ALERTS_ENABLED=false
ALPHA_DISCORD_WEBHOOK=
ALPHA_TELEGRAM_BOT_TOKEN=
ALPHA_TELEGRAM_CHAT_ID=
ALPHA_DISCORD_ADMIN_IDS=
ALPHA_TELEGRAM_ADMIN_IDS=

# Payment & Token Gating
PHANTOM_WALLET_ADDRESS=
OFFICIAL_TOKEN_MINT_ADDRESS=
CREATOR_WALLET_PRIVATE_KEY=

# Whop Integration (Premium/Subscriptions)
WHOP_API_KEY=
WHOP_APP_ID=
WHOP_COMPANY_ID=
WHOP_PLAN_ID_INDIVIDUAL=
WHOP_PLAN_ID_GROUP=

# Redis Cache (optional, improves performance)
REDIS_URL=
REDISCLOUD_URL=

# Feature Toggles
FORCE_IN_MEMORY_DB=false
ENABLE_PUMPFUN_WEBHOOK=false
ENABLE_DEBUG_ENDPOINTS=false
DEBUG_ENDPOINTS_TOKEN=

# Application Settings
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000
ADMIN_EMAILS=

# Pump.fun WebSocket (optional)
PUMP_FUN_WS_URL=wss://pumpportal.fun/api/data
